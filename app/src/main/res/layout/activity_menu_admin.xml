<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.activities.MenuAdminActivity"
    android:background="@drawable/anhnen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#C7ECF1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Admin Menu"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="75dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#C7ECF1"
                    android:gravity="center|right"
                    android:text="ĐĂNG XUẤT"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>

            <Button
                android:id="@+id/manageAccount"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:textSize="17dp"
                android:text="QUẢN LÝ TÀI KHOẢN"/>

            <Button
                android:id="@+id/addProduct"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:text="THÊM SẢN PHẨM"
                android:textSize="17dp"/>

            <Button
                android:id="@+id/updateProduct"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:textSize="17dp"
                android:text="CẬP NHẬT SẢN PHẨM"/>

            <Button
                android:id="@+id/manageOrder"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:textSize="17dp"
                android:text="QUẢN LÝ ĐƠN HÀNG"/>

            <Button
                android:id="@+id/managerVoucher"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:text="QUẢN LÝ MÃ GIẢM GIÁ"
                android:textSize="17dp" />

            <Button
                android:id="@+id/statistic"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp"
                android:text="THỐNG KÊ"
                android:textSize="17dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>