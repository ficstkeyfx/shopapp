<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ThongTinDinhDanh"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/black"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:background="#616EB1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/muiten"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thông tin cá nhân"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginStart="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        android:layout_marginTop="50dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/editext_background"
            android:elevation="3dp"
            android:hint="Tên"
            android:minHeight="48dp"
            android:padding="13dp"
            android:textColor="#888887"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/editext_background"
            android:elevation="3dp"
            android:hint="Giới tính"
            android:minHeight="48dp"
            android:padding="13dp"
            android:textColor="#888887"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/editext_background"
            android:elevation="3dp"
            android:hint="Ngày sinh"
            android:minHeight="48dp"
            android:padding="13dp"
            android:textColor="#888887"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/editext_background"
            android:elevation="3dp"
            android:hint="CMND/CCCD/Hộ chiếu"
            android:minHeight="48dp"
            android:padding="13dp"
            android:textColor="#888887"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/editext_background"
            android:elevation="3dp"
            android:hint="Ngày cấp giấy tờ"
            android:minHeight="48dp"
            android:padding="13dp"
            android:textColor="#888887"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/editext_background"
            android:elevation="3dp"
            android:hint="Nơi cấp giấy tờ"
            android:minHeight="48dp"
            android:padding="13dp"
            android:textColor="#888887"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/editext_background"
            android:elevation="3dp"
            android:hint="Ngày hết hạn giấy tờ"
            android:minHeight="48dp"
            android:padding="13dp"
            android:textColor="#888887"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Lưu"
            android:textStyle="bold"
            android:background="#1D3098"/>

    </LinearLayout>



        a
</androidx.constraintlayout.widget.ConstraintLayout>